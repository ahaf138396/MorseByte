{
  "name": "morsebyte",
  "version": "1.0.0",
  "description": "Offline cross-platform Morse and binary converter desktop app.",
  "main": "src/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder -mwl",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "dependencies": {
    "electron": "^31.2.0"
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.example.morsebyte",
    "productName": "MorseByte",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "extraMetadata": {
      "main": "src/main.js"
    }
  }
}
